{{#extends 'base'}}

{{#block 'content'}}
<h2 class="pt-4 display-6">Delete Product</h2>
<p class="pb-3 lead text-muted">{{product.name}} (Product ID: #{{product.id}})</p>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <div class="alert alert-danger">
        <p><big><i class="bi bi-exclamation-triangle-fill"></i></big> Are you sure you want to delete this order?</p>
        <table class="table">
            <thead>
                <tr class="table-light border-dark">
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Email</th>
                    <th>Shipping Address</th>
                    <th>Total Amount</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody>
                <tr class="table-light">
                    <td>
                        {{order.id}}
                    </td>
                    <td>
                        {{order.user.first_name}} {{order.user.last_name}}
                    </td>
                    <td>
                        {{order.user.email}}
                    </td>
                    <td>
                        {{order.shipping_address_line1}} <br />
                        {{order.shipping_address_line2}} <br />
                        {{order.shipping_address_postal}}
                    </td>
                    <td>
                        {{centsToDollars order.total_amount}}
                    </td>
                    <td>
                        {{convertIsoDate order.order_date}}
                    </td>
                    <td>
                        {{order.status.name}}
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-end">
            <a href="/products" class="btn btn-outline-secondary">Cancel</a>
            <input type="submit" class="btn btn-danger" value="Delete Product" />
        </div>
    </div>
</form>
{{/block}}
{{/extends}}