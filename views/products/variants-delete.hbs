{{#extends 'base'}}

{{#block 'content'}}
<h2 class="pt-5 display-6">Delete Product Variant</h2>
<p class="pb-2 lead text-muted">Color: {{variant.color.name}}</p>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <div class="alert alert-danger">
        <p><big><i class="bi bi-exclamation-triangle-fill"></i></big> Are you sure you want to delete this variant?</p>
        <table class="table">
            <thead>
                <tr class="table-light border-dark">
                    <th>Image</th>
                    <th>Color</th>
                    <th>Stock</th>
                </tr>
            </thead>

            <tbody>
                <tr class="table-light">
                    <td>

                    </td>
                    <td>
                        {{variant.color.name}}
                    </td>
                    <td>
                        {{variant.stock}}
                    </td>
                </tr>
            </tbody>
        </table>
        <a href="/products/{{variant.product_id}}/variants" class="btn btn-outline-secondary">Cancel</a>
        <input type="submit" class="btn btn-danger" value="Delete Variant" />
    </div>
</form>
{{/block}}
{{/extends}}