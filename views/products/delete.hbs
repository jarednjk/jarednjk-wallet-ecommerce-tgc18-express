{{#extends 'base'}}

{{#block 'content'}}
<h2 class="pt-5 display-6">Delete Product</h2>
<p class="pb-2 lead text-muted">{{product.name}} (Product ID: #{{product.id}})</p>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <div class="alert alert-danger">
        <p><big><i class="bi bi-exclamation-triangle-fill"></i></big> Are you sure you want to delete this product?</p>
        <table class="table">
            <thead>
                <tr class="table-light border-dark">
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Cost (SGD)</th>
                    <th>Dimension(cm)<br />(L x W x H)</th>
                    <th>Weight (g)</th>
                    <th>Material</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Features</th>
                </tr>

            </thead>
            <tbody>
                <tr class="table-light">
                    <td>
                        {{product.id}}
                    </td>
                    <td>
                        {{product.name}}
                    </td>
                    <td>
                        {{product.description}}
                    </td>
                    <td>
                        {{product.cost}}
                    </td>
                    <td>
                        {{mmToCm product.length}} x {{mmToCm product.width}} x {{mmToCm product.height}}
                    </td>
                    <td>
                        {{product.weight}}
                    </td>
                    <td>
                        {{product.material.name}}
                    </td>
                    <td>
                        {{product.brand.name}}
                    </td>
                    <td>
                        {{product.category.name}}
                    </td>
                    <td>
                        {{#each product.features}}
                        <span class="badge bg-primary">{{this.name}}</span>
                        {{/each}}
                    </td>
                </tr>
            </tbody>
        </table>
        <a href="/products" class="btn btn-outline-secondary">Cancel</a>
        <input type="submit" class="btn btn-danger" value="Delete Product" />
    </div>
</form>
{{/block}}
{{/extends}}