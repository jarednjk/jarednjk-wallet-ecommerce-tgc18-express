{{#extends 'base'}}

{{#block 'content'}}
<h2 class="pt-5 display-6">Deleting Product</h2>
<p class="pb-2 lead text-muted">{{product.name}} (Product ID: #{{product.id}})</p>

<form method="POST">

    <div class="alert alert-danger">
        <p><big><i class="bi bi-exclamation-triangle-fill"></i></big> Are you sure you want to delete this product?</p>
        <table class="table">
            <thead>
                <tr class="table-light border-dark">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Cost</th>
                    <th>Description</th>
                    <th>Dimension</th>
                    <th>Weight</th>
                </tr>

            </thead>
            <tbody>
                <tr class="table-light">
                    <td>
                        {{product.id}}
                    </td>
                    <td>
                        {{product.name}}
                    </td>
                    <td>
                        {{product.cost}}
                    </td>
                    <td>
                        {{product.description}}
                    </td>
                    <td>
                        {{product.length}} x {{product.width}} x {{product.height}}
                    </td>
                    <td>
                        {{product.weight}}
                    </td>
                </tr>
            </tbody>
        </table>
        <a href="/products" class="btn btn-outline-secondary">No, Cancel</a>
        <input type="submit" class="btn btn-danger" value="Yes, Delete" />
    </div>
</form>
{{/block}}
{{/extends}}