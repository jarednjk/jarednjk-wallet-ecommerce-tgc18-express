{{#extends 'base'}}

{{#block 'content'}}

<h2 class="display-6 pt-5">Product</h2>
<table class="table">
    <thead>
        <tr class="table-dark border-dark">
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Cost (SGD)</th>
            <th>Dimension(cm)<br />(L x W x H)</th>
            <th>Weight (g)</th>
            <th>Material</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Features</th>
        </tr>

    </thead>
    <tbody>
        <tr class="table-secondary">
            <td>
                {{product.id}}
            </td>
            <td>
                {{product.name}}
            </td>
            <td>
                {{product.description}}
            </td>
            <td>
                {{product.cost}}
            </td>
            <td>
                {{mmToCm product.length}} x {{mmToCm product.width}} x {{mmToCm product.height}}
            </td>
            <td>
                {{product.weight}}
            </td>
            <td>
                {{product.material.name}}
            </td>
            <td>
                {{product.brand.name}}
            </td>
            <td>
                {{product.category.name}}
            </td>
            <td>
                {{#each product.features}}
                <span class="badge bg-primary">{{this.name}}</span>
                {{/each}}
            </td>
        </tr>
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-end">
    <h2 class="display-6 pt-5">Product Variants</h2>

    <a class="rounded text-decoration-none py-1 mb-2" href="/products/{{product.id}}/variants/create" style="background-color:black"
        onMouseOver="this.style.backgroundColor='white'" onMouseOut="this.style.backgroundColor='black'">
        <span class="p-3" style="color:white" onMouseOver="this.style.color='black'"
            onMouseOut="this.style.color='white'"><big>Add Variant</big></span>
    </a>
</div><table class="table table-hover">
    <thead>
        <tr class="table-dark border-dark">
            <th>Image</th>
            <th>Color</th>
            <th>Stock</th>
            {{!-- <th>Date Created</th> --}}
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
        {{#each variants}}
        <tr>
            <td>

            </td>
            <td>
                {{this.color.name}}
            </td>
            <td>
                {{this.stock}}
            </td>
            {{!-- <td>
                {{this.date_created}}
            </td> --}}
            <td>
                <div class="d-flex">
                    <a class="rounded me-1" href="/products/{{this.product_id}}/variants/{{this.id}}/update"
                        style="background-color:black" onMouseOver="this.style.backgroundColor='white'"
                        onMouseOut="this.style.backgroundColor='black'"><big><i class="bi bi-pencil-square p-2"
                                style="color:white" onMouseOver="this.style.color='black'"
                                onMouseOut="this.style.color='white'"></i></big></a>

                    <a class="rounded" href="/products/{{this.product_id}}/variants/{{this.id}}/delete"
                        style="background-color:black" onMouseOver="this.style.backgroundColor='white'"
                        onMouseOut="this.style.backgroundColor='black'"><big><i class="bi bi-trash3-fill p-2"
                                style="color:white" onMouseOver="this.style.color='black'"
                                onMouseOut="this.style.color='white'"></i></big></a>

                    
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}